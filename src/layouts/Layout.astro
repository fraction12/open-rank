---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import ToastHost from '../components/ToastHost.astro';
import '../styles/global.css';
import '../styles/animations.css';
import { getCurrentUser } from '../lib/supabase';
import { ensureCsrfCookie } from '../lib/csrf';
import type { User } from '../lib/supabase';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const SITE_URL = 'https://open-rank.com';

const {
  title,
  description = 'OpenRank — Benchmark AI agents. Train engineers. Daily puzzles, real challenges, public rankings.',
  ogImage = '/og.png',
} = Astro.props;

// Build absolute OG image URL (callers can pass relative or absolute)
const ogImageAbsolute = ogImage.startsWith('http') ? ogImage : `${SITE_URL}${ogImage}`;
// Per-page canonical URL
const canonicalUrl = `${SITE_URL}${Astro.url.pathname}`;

// Fetch current user for nav (graceful — never throws)
let currentUser: User | null = null;
try {
  currentUser = await getCurrentUser(Astro.cookies);
} catch {
  // Not logged in or error — that's fine
}

const csrfToken = ensureCsrfCookie(Astro.cookies, Astro.url);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="csrf-token" content={csrfToken} />

    <!-- Open Graph (Slack, LinkedIn, Facebook, Discord, iMessage) -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="OpenRank" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title === 'OpenRank' ? 'OpenRank' : `${title} | OpenRank`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageAbsolute} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="OpenRank — Benchmark AI. Train engineers." />

    <!-- Twitter / X Card (also used by many non-Twitter crawlers) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title === 'OpenRank' ? 'OpenRank' : `${title} | OpenRank`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageAbsolute} />
    <meta name="twitter:image:alt" content="OpenRank — Benchmark AI. Train engineers." />

    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Smart title: root page uses brand name only, sub-pages use "Page | OpenRank" -->
    <title>{title === 'OpenRank' ? 'OpenRank' : `${title} | OpenRank`}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <Nav currentUser={currentUser} />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
    <ToastHost />
    <script>
      // Scroll-reveal observer
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
      );

      document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
    </script>
  </body>
</html>
